<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mygifapp">

    <!-- Permissão de acesso à internet (se necessário) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Definir a atividade inicial (página de login) -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            aondroid:name="false"
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            android:exported="true">
        <!-- Atividade GifActivity -->
        <activity
            android:name=".GifActivity"
            android:label="Exibir GIF" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Atividade de registro -->
        <activity android:name=".RegisterActivity" />
        <!-- Atividade de pesquisa -->
        <activity android:name=".SearchActivity" />
        <!-- Atividade de lista de serviços -->
        <activity android:name=".ServicesActivity" />
        <!-- Atividade de feed -->
        <activity android:name=".FeedActivity" />
        <!-- Atividade "Sobre nós" -->
        <activity android:name=".AboutActivity" />
    </application>

</manifest>